<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="ca.qc.collegeahuntsic.weblab6.dto.LigneVitrineDTO"
         table="LIGNEVITRINE">
         <id name="idLivreVitrine"
             type="string">
             <column name="IDLIGNEVITRINE">
             </column>
             <generator class="sequence">
                        <param name="sequence">SEQ_ID_LIGNE_VITRINE</param>
             </generator>
         </id>

         <property name="isPrivate"
                   type="boolean">
                   <column name="ISPRIVATE">
                   </column>
         </property>
         
         <many-to-one name="produitDTO"
                      class="ca.qc.collegeahuntsic.weblab6.dto.ProduitDTO"
                      not-null="true">
                      <column name="PRODUITID">
                      </column>
         </many-to-one>
         
         <many-to-one name="vitrineDTO"
                      class="ca.qc.collegeahuntsic.weblab6.dto.VitrineDTO"
                      not-null="true">
                      <column name="VITRINEID">
                      </column>
         </many-to-one>
         
         <many-to-one name="categorieDTO"
                      class="ca.qc.collegeahuntsic.weblab6.dto.CategorieDTO"
                      not-null="true">
                      <column name="CATEGORIEID">
                      </column>
         </many-to-one>
  </class>
</hibernate-mapping>